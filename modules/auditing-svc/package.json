{
  "name": "@mojaloop/auditing-bc-auditing-svc",
  "version": "0.0.1",
  "description": "Mojaloop auditing server implementation",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/auditing-bc/tree/main/modules/auditing-svc",
  "bugs": {
    "url": "https://github.com/mojaloop/auditing-bc/issues#readme"
  },
  "contributors": [
    "Jason Bruwer <jason.bruwer@coil.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],

  "scripts": {
    "start": "npm run service",
    "service": "npm run build && node dist/application/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "rm -Rf dist",
    "clean:npm": "rm -Rf node_modules",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "lint": "npm run build && npx eslint ./src",
    "lint:fix": "npm run build && npx eslint ./src --fix",
    "test:unit": "jest",
    "audit:resolve": "SHELL=sh resolve-audit",
    "audit:check": "SHELL=sh check-audit",
    "dep:check": "npm exec ncu -e 2",
    "dep:update": "npm exec ncu -u"
  },
  "dependencies": {
    "@elastic/elasticsearch": "^8.1.0",
    "@mojaloop/auditing-bc-public-types-lib": "*",
    "@mojaloop/logging-bc-client-lib": "~0.1.14",
    "@mojaloop/logging-bc-public-types-lib": "~0.1.11",
    "@mojaloop/platform-shared-lib-nodejs-kafka-client-lib": "~0.2.0"
  },
  "devDependencies": {
    "@mojaloop/platform-shared-lib-messaging-types-lib": "~0.2.0",
    "eslint": "^8.14.0",
    "jest": "^27.3.1",
    "npm-check-updates": "^16.3.2",
    "ts-jest": "^27.0.7",
    "typescript": "^4.6.4"
  }
}
