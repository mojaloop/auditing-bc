{
    "name": "@mojaloop/auditing-bc-auditing-svc",
    "version": "0.1.2",
    "description": "Mojaloop auditing server component",
    "license": "Apache-2.0",
    "homepage": "https://github.com/mojaloop/auditing-bc/tree/main/packages/auditing-svc",
    "bugs": {
        "url": "https://github.com/mojaloop/auditing-bc/issues#readme"
    },
    "contributors": [
        "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>",
        "Jason Bruwer <jason.bruwer@coil.com>"
    ],
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "/dist"
    ],
    "private": true,
    "mojaloop": {
        "publish_to_dockerhub": true
    },
    "scripts": {
        "start": "npm run service",
        "start:dev": "npm run build && AUDIT_KEY_FILE_PATH=./dist/tmp_key_file npm run service",
        "service": "node dist/application/index.js",
        "build": "tsc",
        "watch": "tsc -w",
        "clean": "npm run clean:npm; npm run clean:dist",
        "clean:dist": "rm -rf dist",
        "clean:npm": "rm -rf node_modules",
        "pretest": "npm run build",
        "standard": "npm run lint",
        "lint": "npm run build && npx eslint ./src",
        "lint:fix": "npm run build && npx eslint ./src --fix",
        "test:unit": "jest --passWithNoTests --testMatch '**/test/unit/**/*.test.ts'",
        "audit:resolve": "SHELL=sh resolve-audit",
        "audit:check": "SHELL=sh check-audit",
        "dep:check": "ncu -e 2",
        "dep:update": "ncu -u"
    },
    "dependencies": {
        "@elastic/elasticsearch": "^8.7.0",
        "@mojaloop/auditing-bc-public-types-lib": "~0.0.13",
        "@mojaloop/logging-bc-client-lib": "~0.1.23",
        "@mojaloop/logging-bc-public-types-lib": "~0.1.19",
        "@mojaloop/platform-shared-lib-nodejs-kafka-client-lib": "~0.3.39",
        "@mojaloop/platform-shared-lib-messaging-types-lib": "~0.2.78"
    },
    "devDependencies": {
        "@types/node": "^18.15.11",
        "eslint": "^8.38.0",
        "jest": "^29.5.0",
        "npm-check-updates": "~16.10.8",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.2"
    }
}
