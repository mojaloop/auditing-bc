{
  "name": "@mojaloop/auditing-bc",
  "version": "0.0.1",
  "description": "mojaloop auditing bounded context.",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/auditing-bc",
  "private": true,
  "bugs": {
    "url": "https://github.com/mojaloop/auditing-bc/issues#readme"
  },
  "contributors": [
    "Jason Bruwer <jason.bruwer@coil.com>"
  ],
  "scripts": {
    "prepare": "husky install",
    "start:auditing-svc": "npm -w @mojaloop/auditing-bc-auditing-svc run start",
    "build": "npm -ws run build",
    "watch": "npm -ws run watch",
    "clean": "rm -Rf dist && npm -ws --parallel run clean",
    "clean:npm": "rm -Rf node_modules && npm -ws --parallel run clean:npm",
    "pretest": "echo 'FIX ME'",
    "standard": "npm -ws --no-progress lint'",
    "lint": "npm -ws run lint",
    "lint:fix": "npm -ws run lint:fix",
    "test": "npm run test:unit",
    "test:unit": "npm -ws --if-present run test:unit",
    "posttest": "npm run coverage:merge && npm run coverage:gen-report",
    "coverage:merge": "nyc merge ./coverage/ ./coverage/coverage.json",
    "coverage:gen-report": "nyc report --reporter=lcov --temp-dir=./coverage",
    "test:integration": "jest",
    "posttest:integration": "npm run coverage:merge && npm run coverage:gen-report",
    "audit:check": "npm -ws  run audit:check",
    "dep:check": "npm exec ncu -e 2 && npm -ws --parallel run dep:check",
    "dep:update": "npm exec ncu -e 2 -u && npm -ws --parallel run dep:update",
    "publish:public-types": "npm -w @mojaloop/auditing-bc-public-types-lib run pub",
    "publish:client-lib": "npm -w @mojaloop/auditing-bc-client-lib run pub"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "npm-check-updates": "^12.5.11",
    "nyc": "^15.1.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.6.4"
  },
  "workspaces": [
    "modules/public-types-lib",
    "modules/*"
  ]
}
